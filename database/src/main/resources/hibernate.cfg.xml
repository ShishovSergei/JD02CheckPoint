<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="dialect">org.hibernate.dialect.MySQL57Dialect</property>
        <property name="connection.url">jdbc:mysql://localhost:2016/cinema_db?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <!--<property name="hbm2ddl.auto">create</property>-->


        <mapping class="by.itacademy.entity.User"></mapping>
        <mapping class="by.itacademy.entity.Cinema"></mapping>
        <mapping class="by.itacademy.entity.Hall"></mapping>
        <mapping class="by.itacademy.entity.FilmGenre"></mapping>
        <mapping class="by.itacademy.entity.Film"></mapping>
        <mapping class="by.itacademy.entity.CastMember"></mapping>
        <mapping class="by.itacademy.entity.Actor"></mapping>
        <mapping class="by.itacademy.entity.Director"></mapping>
        <mapping class="by.itacademy.entity.FilmFormat"></mapping>
        <mapping class="by.itacademy.entity.Seance"></mapping>
        <mapping class="by.itacademy.entity.Ticket"></mapping>
    </session-factory>
</hibernate-configuration>